{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/chat",
      "methods": ["POST", "OPTIONS"],
      "dest": "backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}